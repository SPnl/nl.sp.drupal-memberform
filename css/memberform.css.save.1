/* MEMBERFORM */
/* remove important after disabling css in main theme */
.page-aanmelden .ajax-progress {
    display:none; /*removes even geduld */
}
.page-aanmelden .page {
    background: #f1f1f1;
}
.page-aanmelden .primary-content {
    padding: 3rem 0;
}
.page-aanmelden header h1 {
    background: #fff;
    text-align: left!important;
    color: #222!important;
    padding: 1rem!important;
}
.page-aanmelden form {
    background: #fff!important;
    padding: 0 1rem 3rem 1rem!important;
}
.page-aanmelden form img {
    max-width: calc(100% + 2rem);
    margin: 0 -1rem 1rem -1rem;
}
.page-aanmelden form h3 {
    margin: 1rem auto .5rem auto;
    font-size: 1.5rem;
}
.page-aanmelden form h3,
.page-aanmelden form .memberform {
    max-width: 480px; /* 50% of maxwidth 960px */
    margin: 0 auto;
}
.page-aanmelden form label {
    display: block!important;
    font-size: 1.125rem;
    font-weight: normal;
    font-family: "HelveticaNeueLTStd-BdCn", "Helvetica Neue", Helvetica, "Roboto Sans", "Segoe UI", Arial, "Lucida Grande", sans-serif;
    letter-spacing: .3px;
}
.page-aanmelden form label.option {
    display: inline-block!important;
}
.page-aanmelden .form-select {
    padding: .5rem;
    font-family: "HelveticaNeueLTStd-Md", "Helvetica Neue", Helvetica, "Roboto Sans", "Segoe UI", Arial, "Lucida Grande", sans-serif;
    font-size: 1rem;
    background: #fafafa;
    border: 1px solid #ddd;
    width: 100%;
    text-overflow: ellipsis;
}
.page-aanmelden .form-type-date-select .form-type-select {
    margin-right: .5rem;
}
.page-aanmelden .form-item {
    padding: .5rem 0;
}
.page-aanmelden .form-item .form-text {
    max-width: 100%;
    width: 100%;
    padding: 1rem;
    background: #fafafa;
    border: 1px solid #ddd;
    color: #333;
    font-family: "HelveticaNeueLTStd-Md", "Helvetica Neue", Helvetica, "Roboto Sans", "Segoe UI", Arial, "Lucida Grande", sans-serif;
    box-sizing: border-box;
}
.page-aanmelden .form-item .form-select:focus,
.page-aanmelden .form-item .form-textarea:focus,
.page-aanmelden .form-item .form-text:focus {
    outline: none;
    box-shadow: 0 0 5px 0 #c8c8c8;
    border: 1px solid #888;
}

.page-aanmelden .messages {
    border: 1px solid;
}
.page-aanmelden .error {
    background-color: #f2dede;
    border-color: #ebccd1;
    color: #a94442;
}
.page-aanmelden .info {
    background-color: #d9edf7;
    border-color: #bce8f1;
    color: #31708f;
}
.page-aanmelden .success {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #3c763d;
}
.page-aanmelden .warning {
    background: #fcf8e3;
    border-color: #faebcc;
    color: #8a6d3b;
}

span.field-prefix {
    position: absolute;
    z-index: 999;
    padding: 16px 0 16px 16px;
}


